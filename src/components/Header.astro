---
import { SITE_TITLE } from '../consts';
import Navigation from './Navigation.astro';
import MobileMenu from './MobileMenu.astro';
---

<header data-testid="site-header" class="bg-dark-surface border-b border-dark-border sticky top-0 z-50">
	<div class="container mx-auto px-4 py-4">
		<nav class="flex items-center justify-between">
			<!-- Author Name/Logo -->
			<div data-testid="author-name">
				<a href="/" class="text-xl font-bold text-dark-text hover:text-white transition-colors">
					{SITE_TITLE}
				</a>
			</div>

			<!-- Desktop Navigation -->
			<Navigation />

			<!-- Mobile Menu -->
			<MobileMenu />
		</nav>
	</div>
</header>
