---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import StarfieldBackground from '../../components/ui/StarfieldBackground.tsx';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog - Dane Griggs">
	<Header />
	
	<!-- Starfield Background -->
	<StarfieldBackground client:load />
	
	<main class="relative z-10">
		<!-- Hero Section -->
		<section class="relative py-16 bg-gradient-to-br from-deep-space-navy via-nebula-purple to-deep-space-navy overflow-hidden">
			<!-- Cosmic Background Elements -->
			<div class="absolute inset-0 bg-starfield opacity-20 animate-starfield"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-deep-space-navy/50 to-transparent"></div>
			
			<div class="container mx-auto px-4 text-center relative z-10">
				<div class="max-w-4xl mx-auto space-y-6">
					<h1 class="text-4xl md:text-6xl font-primary font-bold text-solar-white mb-4">
						<span class="bg-gradient-aurora bg-clip-text text-transparent">
							Behind the Stories
						</span>
					</h1>
					<p class="text-xl md:text-2xl text-stellar-gold font-medium">
						Insights from my writing journey & the worlds I create
					</p>
					<p class="text-lg text-solar-white/90 max-w-2xl mx-auto leading-relaxed">
						Discover the inspiration behind my cosmic romances, character development insights, and glimpses into the creative process.
					</p>
				</div>
			</div>
		</section>

		<!-- Blog Posts Section -->
		<section class="py-16 bg-bg-secondary">
			<div class="container mx-auto px-4">
			<ul class="grid gap-8 md:grid-cols-2">
				{
					posts.map((post, index) => {
						// Create a dynamic gradient overlay based on post category or index
						const gradientOverlays = [
							'bg-gradient-to-br from-cosmic-rose/20 via-transparent to-nebula-purple/30',
							'bg-gradient-to-tr from-stellar-gold/25 via-transparent to-cosmic-rose/20',
							'bg-gradient-to-bl from-nebula-purple/20 via-transparent to-stellar-gold/25',
							'bg-gradient-to-tl from-ocean-teal/20 via-transparent to-cosmic-rose/25',
							'bg-gradient-to-br from-mars-red/15 via-transparent to-nebula-purple/20'
						];
						const overlayClass = gradientOverlays[index % gradientOverlays.length];
						
						return (
							<li class={index === 0 ? "md:col-span-2" : ""}>
								<a 
									href={`/blog/${post.id}/`}
									class="block group bg-white border border-gray-200 rounded-lg overflow-hidden hover:border-cosmic-rose/50 transition-all duration-300 hover:shadow-xl"
								>
									{post.data.heroImage && (
										<div class="relative overflow-hidden">
											<Image 
												width={720} 
												height={360} 
												src={post.data.heroImage} 
												alt=""
												class="w-full h-48 object-cover object-[center_33%] group-hover:scale-105 transition-transform duration-300"
											/>
											<div class={`absolute inset-0 ${overlayClass} mix-blend-overlay group-hover:opacity-75 transition-opacity duration-300`}></div>
											<div class="absolute inset-0 bg-gradient-to-t from-white/20 via-transparent to-transparent"></div>
										</div>
									)}
								<div class="p-6">
									<h4 class="text-xl font-semibold text-deep-space-navy group-hover:text-cosmic-rose transition-colors mb-2">
										{post.data.title}
									</h4>
									<p class="text-gray-600 text-sm">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
								</a>
							</li>
						);
					})
				}
			</ul>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
