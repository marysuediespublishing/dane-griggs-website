---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog - Dane Griggs">
	<Header />
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-dark-text mb-8">Blog</h1>
		<section>
			<ul class="grid gap-8 md:grid-cols-2">
				{
					posts.map((post, index) => {
						// Create a dynamic gradient overlay based on post category or index
						const gradientOverlays = [
							'bg-gradient-to-br from-cosmic-rose/20 via-transparent to-nebula-purple/30',
							'bg-gradient-to-tr from-stellar-gold/25 via-transparent to-cosmic-rose/20',
							'bg-gradient-to-bl from-nebula-purple/20 via-transparent to-stellar-gold/25',
							'bg-gradient-to-tl from-ocean-teal/20 via-transparent to-cosmic-rose/25',
							'bg-gradient-to-br from-mars-red/15 via-transparent to-nebula-purple/20'
						];
						const overlayClass = gradientOverlays[index % gradientOverlays.length];
						
						return (
							<li class={index === 0 ? "md:col-span-2" : ""}>
								<a 
									href={`/blog/${post.id}/`}
									class="block group bg-dark-surface border border-dark-border rounded-lg overflow-hidden hover:border-cosmic-rose/50 transition-all duration-300 hover:shadow-cosmic"
								>
									{post.data.heroImage && (
										<div class="relative overflow-hidden">
											<Image 
												width={720} 
												height={360} 
												src={post.data.heroImage} 
												alt=""
												class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
											/>
											<div class={`absolute inset-0 ${overlayClass} mix-blend-overlay group-hover:opacity-75 transition-opacity duration-300`}></div>
											<div class="absolute inset-0 bg-gradient-to-t from-dark-surface/20 via-transparent to-transparent"></div>
										</div>
									)}
								<div class="p-6">
									<h4 class="text-xl font-semibold text-dark-text group-hover:text-cosmic-rose transition-colors mb-2">
										{post.data.title}
									</h4>
									<p class="text-dark-text-muted text-sm">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
								</a>
							</li>
						);
					})
				}
			</ul>
		</section>
	</main>
	<Footer />
</Layout>
