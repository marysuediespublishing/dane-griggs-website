---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SearchClientSimple from '../components/SearchClientSimple.tsx';
import { SITE_TITLE } from '../consts';

// For static generation, we can't access URL params at build time
// The SearchClient component will handle everything client-side
---

<Layout title={`Search - ${SITE_TITLE}`}>
  <Header />
  
  <main>
    <!-- All search functionality is handled client-side -->
    <SearchClientSimple client:load />
  </main>

  <Footer />
</Layout>