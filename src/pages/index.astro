---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<Layout title={SITE_TITLE}>
	<Header />
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-dark-text mb-6">Welcome to Dane Griggs</h1>
		<div class="prose prose-invert max-w-none">
			<p class="text-dark-text-muted text-lg mb-4">
				Author, writer, and creative professional sharing insights and stories.
			</p>
			<p class="text-dark-text-muted mb-4">
				This is a modern, dark-themed website built with <a href="https://astro.build/" class="text-blue-400 hover:text-blue-300">Astro</a> 
				and styled with Tailwind CSS. Explore the blog for the latest writings and insights.
			</p>
			<div class="mt-8">
				<h2 class="text-2xl font-semibold text-dark-text mb-4">Get Started</h2>
				<ul class="space-y-2 text-dark-text-muted">
					<li><a href="/blog" class="text-blue-400 hover:text-blue-300">Read the latest blog posts</a></li>
					<li><a href="/about" class="text-blue-400 hover:text-blue-300">Learn more about Dane</a></li>
					<li><a href="/contact" class="text-blue-400 hover:text-blue-300">Get in touch</a></li>
				</ul>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
