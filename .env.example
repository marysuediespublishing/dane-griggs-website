# Mailchimp Configuration
# Get these values from your Mailchimp account

# Your Mailchimp API Key (Account > Extras > API Keys)
# Format: key-server_region (e.g., abc123def456-us19)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here

# Your Mailchimp List/Audience ID 
# Found in: Audience > Settings > Audience name and defaults
MAILCHIMP_LIST_ID=your_list_id_here

# Server region from your API key (the part after the dash)
# Examples: us19, us6, us1, etc.
MAILCHIMP_SERVER_REGION=us19

# Google Analytics 4 Configuration
# Get your Measurement ID from GA4 property settings
# Format: G-XXXXXXXXXX (found in Admin > Property Settings > Property details)
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Book Marketing Conversion Values (in USD)
# Adjust these values based on your average book prices and marketing goals
PUBLIC_GA_BOOK_PURCHASE_VALUE=4.99
PUBLIC_GA_NEWSLETTER_VALUE=1.00
PUBLIC_GA_ENGAGEMENT_VALUE=0.50

# Meta Pixel Configuration
# Get your Pixel ID from Meta Business Manager > Events Manager
# Format: numeric ID (e.g., 123456789012345)
PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here

# Meta Conversions API (optional - for server-side tracking)
# Get from Meta Business Manager > Business Settings > System Users
META_ACCESS_TOKEN=your_meta_access_token_here

# Meta Test Event Code (for development/testing)
# Generate in Events Manager > Test Events
META_TEST_EVENT_CODE=your_test_event_code_here

# Meta Conversion Values (in USD)
# Used for value optimization in Meta campaigns
PUBLIC_META_BOOK_PURCHASE_VALUE=4.99
PUBLIC_META_KU_CLICK_VALUE=2.50
PUBLIC_META_NEWSLETTER_VALUE=1.00
PUBLIC_META_ENGAGEMENT_VALUE=0.25